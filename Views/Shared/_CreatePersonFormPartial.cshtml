@model MVCBasics.ViewModels.CreatePersonViewModel

<form asp-controller="People" asp-action="Create"  method="post" class="form p-5 border border-secondary" style="max-width: 28rem; margin-left: auto;">
    <h4 class="form-text">Create a new Person.</h4>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name"/>
        <span class="alert-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="CityId"></label>
        <select class="form-control" asp-for="CityId">
            @{
                foreach (var city in ViewBag.Cities)
                {
                    <option value="@city.Id">@city.Name</option>
                }
            }
        </select>
        <span class="alert-danger" asp-validation-for="CityId"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input class="form-control" asp-for="PhoneNumber"/>
        <span class="alert-danger" asp-validation-for="PhoneNumber"></span>
    </div>
    <button class="form-control btn btn-primary" type="submit"> Create </button>
</form>