<!DOCTYPE html>
<html lang="en" style="height: 100%;">
<head>
    <title>@ViewData["Title"]</title>
    <meta http-equiv="X-UA-Compatible" content="text/html; charset=utf-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body class="d-flex flex-column" style="min-height: 100%;">
<header class="">
    <nav class="navbar navbar-expand-lg bg-light d-flex align-items-baseline p-3">
        <span class="bg-light">
            <h2 class="navbar-brand d-inline-block">Lexicon MVCBasics - Michael Sjögren</h2>
        </span>
        <ul class="navbar list-unstyled d-flex flex-grow-1 justify-content-sm-evenly">
            <li class="nav-item nav-tabs">
                <a class="nav-link" href="/About">About</a>
            </li>
            <li class="nav-item nav-tabs">
                <a class="nav-link" href="/Projects">Projects</a>
            </li>
            <li class="nav-item nav-tabs">
                <a class="nav-link" href="/Contact">Contact</a>
            </li>
        </ul>
    </nav>
</header>
<main>
    <div class="container">
        @RenderBody()
    </div>
</main>
<footer class="d-flex p-4 bg-gradient bg-light justify-content-center mt-auto">
    <div>
        <span> &copy; <b> Michael Sjögren</b></span> <span> @DateTime.Now.ToString("MMM dd, yyyy")</span>
    </div>
</footer>
</body>
</html>