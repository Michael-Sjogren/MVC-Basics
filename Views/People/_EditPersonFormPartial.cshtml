@model MVCBasics.ViewModels.EditPersonViewModel

<form asp-controller="People" asp-action="Update"  method="post" class="form p-5 border border-secondary" style="max-width: 28rem; margin-left: auto;">
    <h4 class="form-text">Edit @Model.Name</h4>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name"/>
        <span class="alert-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Languages"></label>
        @{
            var options = new SelectList(ViewBag.Languages, "Id", "Name" );
        }
        <select class="form-control" multiple asp-for="Languages" asp-items="@options"></select>
        <span class="alert-danger" asp-validation-for="Languages"></span>
    </div>
    <div class="form-group">
        <label asp-for="CityId"></label>
        <select class="form-control" asp-for="CityId">
            @{
                foreach (var city in ViewBag.Cities)
                {
                    <option value="@city.Id">@city.Name</option>
                }
            }
        </select>
        <span class="alert-danger" asp-validation-for="CityId"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input class="form-control" asp-for="PhoneNumber"/>
        <span class="alert-danger" asp-validation-for="PhoneNumber"></span>
    </div>
    <input hidden="hidden" asp-for="Id">
    <button class="form-control btn btn-primary" type="submit"> Update </button>
</form>