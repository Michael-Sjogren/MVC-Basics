@using MVCBasics.ModelViews
@model MVCBasics.ModelViews.PeopleViewModel

<section>
    <header>
        <h1>People</h1>
    </header>
    <partial name="_CreatePersonForm" model="@new CreatePersonViewModel();"/>
    
    <section class="mt-5">
        <header class="d-flex justify-content-between flex-wrap">
            <h2>
                People List
            </h2>
            <partial name="_SearchPersonForm" model="@new SearchPersonViewModel()"/>
        </header>
        <section class="w-auto p-2">
            <partial name="_PeopleList" model="@Model.People"/>
        </section>
    </section>
</section>