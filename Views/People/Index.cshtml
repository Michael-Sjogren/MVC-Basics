@using MVCBasics.ViewModels
@model MVCBasics.ViewModels.PeopleViewModel

<section>
    <header>
        <h1>People</h1>
    </header>
    @{
        var createPersonVm = new CreatePersonViewModel();
        var searchPersonVm = new SearchPersonViewModel();
    }
    @if(ViewBag.Cities != null && ViewBag.Cities.Count > 0){ 
         
    <partial name="_CreatePersonFormPartial" model="@createPersonVm;"/>
    
    <section class="mt-5">
        <header class="d-flex justify-content-between flex-wrap">
            <h2>
                People List
            </h2>
            <partial name="_SearchPersonForm" model="@searchPersonVm;"/>
        </header>
        <section class="w-auto p-2">
            <partial name="_PeopleListPartial" model="@Model.People"/>
        </section>
    </section>
    }
    else
    {
        <p>Add some Cities in order to create a person</p>
    }
</section>